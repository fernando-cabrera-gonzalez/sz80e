{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build z80 emulator",
            "command": "gcc",
            "args": [
                "-g",
                "./src/main.c",
                "./src/dbg.c",
                "./src/mem_test.c",
                "./src/opcodes.c",
                "./src/opcodes_bit.c",
                "./src/opcodes_ext.c",
                "./src/opcodes_ix.c",
                "./src/opcodes_iy.c",
                "./src/opcodes_main.c",
                "./src/utl.c",
                "./src/utl_public.c",
                "./src/z80.c",
                "-I./inc",
                "-Wall",
                "-o",
                "./z80emu"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Compile z80emu static library",
            "command": "gcc",
            "args": [
                "-g",
                "-c",
                "./src/dbg.c",
                "./src/opcodes.c",
                "./src/opcodes_bit.c",
                "./src/opcodes_ext.c",
                "./src/opcodes_ix.c",
                "./src/opcodes_iy.c",
                "./src/opcodes_main.c",
                "./src/utl.c",
                "./src/utl_public.c",
                "./src/z80.c",
                "-I./inc",
                "-Wall"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "Build z80emu static library",
            "dependsOn": "Compile z80emu static library",
            "command": "ar",
            "args": [
                "rcs",
                "libz80emu.a",
                "dbg.o",
                "opcodes.o",
                "opcodes_bit.o",
                "opcodes_ext.o",
                "opcodes_ix.o",
                "opcodes_iy.o",
                "opcodes_main.o",
                "utl.o",
                "utl_public.o",                
                "z80.o"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "Build z80emu library test executable",
            "dependsOn": "Build z80emu static library",
            "command": "gcc",
            "args": [
                "-g",
                "./src/main.c",
                "./src/mem_test.c",
                "-I./inc",
                "-L.",
                "-lz80emu",
                "-Wall",
                "-o",
                "./z80emu_test"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ],
    "version": "2.0.0"
}
